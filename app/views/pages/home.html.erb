<div class="container text-center">
  <h1 class="mb-5">Welcome to Airbnb</h1>
  <p></p>
  <span data-controller="typed-js"></span>
  <p></p>
  <div class="row first-form">
    <div class="col-1"></div>
    <div class="col-10">

      <form action="/flats" method="get">
        <label for="location"> <strong>Location</strong></label>
        <input type="text" name="location">
        <label for="start"><strong>Start date</strong></label>
        <input type="date" name="start">
        <label for="end"><strong>End date</strong></label>
        <input type="date" name="end">
        <label for="guests"><strong>Guests</strong></label>
        <input type="number" name="guests">

        <input type="submit" class="btn btn-success" id="btn-log-out" value="Go!">
      </form>
    </div>
  </div>

  <div class="row set-bacground ">
    <div class="col-1"></div>
    <div class="col-10 d-flex justify-content-center">
      <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active carousel-div" data-bs-interval="10000">
            <img src="https://cdn.trendir.com/wp-content/uploads/old/house-design/2014/05/28/house-with-two-gables-one-courtyard-and-a-view-11.jpg" class="d-block w-100 carouselHome" alt="house 1">
            <div class="carousel-caption d-none d-md-block">
              <h5>Anytime</h5>
              <p>Book a flat whenever is more convenient</p>
            </div>
          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img src="https://static.standard.co.uk/s3fs-public/thumbnails/image/2019/06/25/13/airbnb-luxe-wanakanz-deck-0193-pulledback-bracket-r1.jpg" class="d-block w-100 carouselHome" alt="house 2">
            <div class="carousel-caption d-none d-md-block">
              <h5>Anywhere</h5>
              <p>Find amazing places all over the world</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="https://archello.s3.eu-central-1.amazonaws.com/images/2017/06/26/PUL7993.1507095856.2632.jpg" class="d-block w-100 carouselHome" alt="house 3">
            <div class="carousel-caption d-none d-md-block">
              <h5>Anything</h5>
              <p>You dreams = Your boundries</p>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
</div>
