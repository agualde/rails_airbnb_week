<div class=container>



    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3 justify-content-center">

    <h1 class="booking_header my-5">List a flat</h1>
    <h4 class="booking_sub_header my-5">Become a host</h4>


<%= simple_form_for (@flat) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :rooms %>

    <div>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :address %>
    <%= f.input :location %>
    <%= f.input :capacity %>
    <%= f.input :price %>
    </div>
    <div class="new-flat-booleans mb-3">
    <div>
     <%= f.input :kitchen %>
      <%= f.input :wifi %>
      <%= f.input :accept_pets %>
       </div>
      <div>
      <%= f.input :air_con, label: "Air conditioning" %>
      <%= f.input :smoker_friendly %>
      <%= f.input :parking %>
    </div>
    <div>
      <%= f.input :pool_access %>
      <%= f.input :tv %>
      <%= f.input :washer %>
      </div>
      <div>
      <%= f.input :luggage_drop_off %>
      <%= f.input :balcony %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn go-btn" %>
  </div>
<% end %>


</div>
</div>
</div>
</div>
