<div class=container>

    <h1 class="booking_header my-5">Create a Booking</h1>
    <h4 class="booking_sub_header my-5">When would you like to rent this flat?</h4>



    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2">


<%= simple_form_for [@flat, @booking] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn", id: "btn-log-out" %>
  </div>
<% end %>


</div>
</div>
</div>
</div>
